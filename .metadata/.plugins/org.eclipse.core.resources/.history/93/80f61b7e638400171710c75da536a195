package com.reciperex.storage.entity.impl;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.sql.Statement;

import org.apache.commons.dbutils.QueryRunner;
import org.json.simple.parser.JSONParser;

import com.fasterxml.jackson.databind.ObjectMapper;
import com.reciperex.storage.entity.ImageService;
import com.reciperex.storage.service.DatabaseConfig;
import com.reciperex.storage.service.DatabaseManager;
import com.reciperex.storage.service.SQLBuilder;

public class ImageServiceImpl implements ImageService{

	DatabaseConfig config = new DatabaseConfig();
//	QueryRunner queryRunner = new QueryRunner();
//	ObjectMapper mapper = new ObjectMapper();
//	JSONParser parser = new JSONParser();
	DatabaseManager manager = new DatabaseManager();
	
	Connection conn = null;
	Statement stmt = null;
	PreparedStatement pstmt = null;
	String sql = null;
	
	public ImageServiceImpl(){
		
	}
	
	
	public int insertNewImage(String imagePath, String text, Integer recipeId){
		String result = null;
		conn = manager.getConnection();
		int r = 0;
		try {
			pstmt = conn.prepareStatement("INSERT INTO image (imagePath, text, recipeId) "
					+ "VALUES (?, ?, ?);");
			pstmt.setString(1, SQLBuilder.toSQLString(imagePath));
			pstmt.setString(2, SQLBuilder.toSQLString(text));
			pstmt.setInt(3, recipeId);
	
			r = pstmt.executeUpdate();
			if (r != 0){
				result = "Image at " + imagePath + " successfully inserted into database";
			}
			else result = "Image not created";
			
		} catch (SQLException e) {
			System.out.println("Unable to insert image into database");
			e.printStackTrace();
		}
		System.out.println(result);
		return r;
	}
	
}
