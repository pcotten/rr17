package com.reciperex.storage.src.test.java.junit;

import org.junit.BeforeClass;
import org.junit.Test;
import org.junit.runner.RunWith;
import org.junit.runners.Suite;
import org.junit.runners.Suite.SuiteClasses;

import com.reciperex.model.User;
import com.reciperex.storage.service.DatabaseManager;

@RunWith(Suite.class)
@SuiteClasses({DatabaseManager.class})
public class AllTests {
	
	static DatabaseManager dbManager;
	
	@BeforeClass
	public static void initDatabaseManager(){
		dbManager = new DatabaseManager();
	}
	
	
	@Test
	public void testAddUser(){
		
		User user = new User("John", "Doe", "jdoe@someplace.net", "mrjj123", "myPassword!");

		dbManager.addUser(user);
	}
	
	@Test
	public void testDeleteUserByObject(){
		User user = new User("John", "Doe", "jdoe@someplace.net", "mrjj123", "myPassword!");
		
		dbManager.deleteUser(user);
	}
	
	@Test
	public void testDeleteUserById(){
		User user = new User("John", "Doe", "jdoe@someplace.net", "mrjj123", "myPassword!");
		
		dbManager.deleteUser(user.getId());
	}
}
