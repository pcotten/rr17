package com.reciperex.storage.service;

import java.util.List;

import com.reciperex.model.User;
import com.reciperex.service.IdService;
import com.reciperex.storage.service.DatabaseManager;

public class Test {

	
	
	public static void main(String[] args) {
		
		DatabaseManager dbManager = new DatabaseManager();
//		dbManager.testConnection();
		
		User newUser = new User("John", "Doe", "jdoe@someplace.net", "mrjj123", "myPassword!");
		dbManager.addUser(newUser);
		System.out.println("Added new user...");
		
		System.out.println("The highest user number is: " + dbManager.queryMaxIdNumber("user").toString());
		
		
		System.out.println("The IdService will generate " + IdService.generateId("user"));
		
		dbManager.deleteUser(newUser.getId());
		System.out.println("User deleted...");
		
		System.out.println("The highest user number is: " + dbManager.queryMaxIdNumber("user").toString());
		
		
		System.out.println("The IdService will generate " + IdService.generateId("user"));
		

	}

}
