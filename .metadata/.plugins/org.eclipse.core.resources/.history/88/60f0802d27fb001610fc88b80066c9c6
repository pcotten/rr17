package com.reciperex.model;

import com.reciperex.service.IdService;

public class Instruction {

	private Integer id;
	private Integer instructionOrderIndex;
	private String instructionText;
	private Integer recipeId;
	
	public Instruction(Integer instructionOrderIndex, Integer recipeId) {
		super();
		this.id = IdService.generateId("instruction");
		this.instructionOrderIndex = instructionOrderIndex;
		this.recipeId = recipeId;
	}
	
	public Integer getInstructionId() {
		return id;
	}
	public void setInstructionId(Integer instructionId) {
		this.id = instructionId;
	}
	
	public Integer getInstructionOrderIndex() {
		return instructionOrderIndex;
	}
	public void setInstructionOrderIndex(Integer instructionOrderIndex) {
		this.instructionOrderIndex = instructionOrderIndex;
	}
	
	public String getInstructionText() {
		return instructionText;
	}
	public void setInstructionText(String instructionText) {
		this.instructionText = instructionText;
	}
	
	public Integer getRecipeId() {
		return recipeId;
	}
	public void setRecipeId(Integer recipeId) {
		this.recipeId = recipeId;
	}
	
	
}
